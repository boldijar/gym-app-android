<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/find_courses_tab_layout"
        fontPath="fonts/Lato-Light.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/white"
        android:visibility="gone"
        app:tabTextColor="@color/transparent_white"
        app:tabSelectedTextColor="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/find_courses_view_pager"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />
    
    <com.gym.app.view.EmptyLayout
        android:id="@+id/find_courses_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

</LinearLayout>