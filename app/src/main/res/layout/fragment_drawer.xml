<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawer_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/user"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawer_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Big"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/drawer_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shaq"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/drawer_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 credits"
                android:textColor="@color/white"
                android:textSize="18sp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:alpha=".3"
        android:background="@color/light_gray"/>

    <TextView
        android:id="@+id/drawer_menu_your_cars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:text="Your cars"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/drawer_menu_own_parking_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:text="Own parking places"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:onClick="ownPlaceClicked"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:text="Parking history"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:onClick="goToParkingHistory"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="16dp"
        android:text="LEGAL AND PRIVACY"
        android:textColor="@color/white"
        android:textSize="12sp"/>
</LinearLayout>
